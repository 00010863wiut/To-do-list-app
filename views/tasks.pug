extends layout 

block content 
    .containerAllTasks
        h1 All tasks 

        each task in tasks 
            .task_wrapper
                .taskTitle
                    input.checkbox(type="checkbox" value="1" name="checkbox")
                    a.task(href='/tasks/detail')= task
                .buttons
                    a.delete(href='#') Delete
                    a.finished(href='#') Finished
    .circle 
    .circleSecond
    .circleThird
